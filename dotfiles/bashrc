
[[ $- =~ i ]] || return 0

[[ -f ~/RESET ]] && unset NORMAL KEEPPATH ENVDIR
[[ -v NORMAL   ]] || { [[ -f ~/NORMAL   ]] && export NORMAL=1; }
[[ -v KEEPPATH ]] || { [[ -f ~/KEEPPATH ]] && export KEEPPATH=$PATH; }
[[ -v ENVDIR   ]] || { [[ -d ~/envfiles ]] && export ENVDIR=~/envfiles; }

. ~/.envpurge
. ~/.bloader $ENVDIR/{init,envsrc,finish}

# because LXDE has vte?
[[ $PROMPT_COMMAND =~ __vte ]] && PROMPT_COMMAND=${PROMPT_COMMAND#* } || :

prompt

