[[ $# -gt 0 ]] || return 0
for load in $*; do
    [[ -v NORMAL ]] || echo ${load##*/}
    dir=${load%/*}
    for file in $(perl -nl -E '/^(\W|$)/ || say s/\W.+//r' $load); do
	path=$dir/$file
	[[ -s $path ]] || continue
	[[ -v NORMAL ]] && echo -n . || echo $file
	. "$path"
    done
    echo ''
done
unset load dir path file
