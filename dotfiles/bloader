[[ $# -gt 0 ]] || return 0
for load in $*; do
    [[ -v NORMAL ]] || echo ${load##*/}
    dir=${load%/*}
    perl -nl -E '/^(\W|$)/ || say s/\W.+//r' $load |
    while read; do
	path=$dir/$REPLY
	[[ -s $path ]] || continue
	[[ -v NORMAL ]] && echo -n . || echo $REPLY
	. "$path"
    done
    echo ''
done
unset load dir path
