[[ $# -gt 0 ]] || return 0
for load in $*; do
    [[ -v NORMAL ]] || echo ${load##*/}
    dir=${load%/*}
    for file in $(grep '^+' $load | cut -f1 -d' ' | sed -e s,^+,$dir/,); do
	[[ -s $file ]] || continue
	[[ -v NORMAL ]] && echo -n . || echo ${file##*/}
	. "$file"
    done
    echo ''
done
unset load dir file
