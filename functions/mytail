mytail () {
    mytailf |
    while read iface mac; do
        echo $iface ${mac:(-8)};
    done | sed -n 's/:/ /gp'
} 

mytailf () {
    [[ $(type -p ip) ]] || return 0;
    ip -o link show | perl -anlE 'next if /\slo:/; say "@F[1,-3]"'
} 
