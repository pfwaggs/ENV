# vim: ai si sw=4 sts=4 et ft=sh

mytail () {
   declare dev ans cmd=$(type -p ip ifconfig | head -n 1)
   case $cmd in
	*/ip)
	    dev=$(ls -d /sys/class/net/e*)
	    ip link show ${dev##*/} | grep link/ether
	;;
	*/ifconfig)
	    ifconfig eth0 | grep eth0
   esac | perl -nE '($m)=/([[:xdigit:]:]{8})\s/;say $m=~s/://gr'
}
