ew () {
    declare name mac
    read name mac <<< $(ssh pi@colt /usr/sbin/arp | grep -i $1 | perl -F'/\s+/' -anlE 'printf "%s\t%s", @F[0,2]')
    if [[ $name ]]; then
        sudo etherwake $mac || echo $mac not found
    else
        echo $1 is not a valid machine
    fi
}

