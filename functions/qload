
qload () {
    [[ $# ]] || return 0
    declare dir file
    for file in "$@"; do
	if [[ $file =~ / ]]; then
	    source "$file"
	else
	    for dir in ${ENV_DIRS//:/ }; do
		[[ ! -s "$dir/functions/$file" ]] && continue
		read -p "load $dir/functions/$file ?" ans
		[[ $ans == y* ]] && source "$dir/functions/$file" || continue
	    done
	fi
    done
}


