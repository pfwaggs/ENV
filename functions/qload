
qload () {
    [[ $# ]] || return 0
    declare path file
    for file in "$@"; do
	if [[ $file =~ / ]]; then
	    source "$file"
	else
	    for path in ${ENV//:/ }; do
		path+=/functions/$file
		[[ ! -s "$path" ]] && continue
		read -p "load $path ?" ans
		[[ $ans == y* ]] && source "$path" || continue
	    done
	fi
    done
}


