
_show () { compgen -v | grep -i ^$2; }

show () {
  declare ERROR
  [[ ${!1} ]] || echo ${ERROR:?"no valid variable for $1"}
  set | grep ^$1= | sed -n -e 's/=/ = /p'
}

complete -C '_show' show

