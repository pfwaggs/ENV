alias h='history'
alias vimh='vim "+:help" "+:only"'
alias l='ls -F'
alias ll='l -l'
alias lr='ll -R'
alias now='date -u; date +"%a %h %d %T"; date +%s | commas'
alias p='$PAGER'
alias ic='tr [:lower:][:upper:] [:upper:][:lower:] <<< '
alias vm='vim'
alias vi='$VISUAL'
alias brewon='source ~/perl5/perlbrew/etc/bashrc'
#alias make='gnumake'
