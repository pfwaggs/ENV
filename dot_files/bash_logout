

clear
rm $SMAP
[[ $SHLVL -eq 1 ]] || return 0
[[ -L $LA ]] || { ssh-agent -k; rm $LA $SA; }
printf "%s closing subshell @ %s\n\n" $(hostname):$LOGNAME "$(date)"
fortune=$(type fortune)
[[ $fortune ]] || return 0
read -t 5 -p 'fortune? '
[[ ${REPLY:-n} =~ ^[yY] ]] || exit 0
$fortune
printf "\n"
read -p 'pause...'
