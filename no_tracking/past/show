
function _ShowEnv () { #AzA
    declare x w m
    [[ -v COMP_LINE ]] && x=${2^^} || x=${1^^}
    #w="$x _$x ${x^^} _${x^^}"
    declare -a list=($(compgen -v $x))
    [[ ${#list[@]} -gt 0 ]] || list=($(compgen -v _$x))
    [[ ${#list[@]} -gt 0 ]] || list=($(compgen -v  ${x,,}))
    [[ ${#list[@]} -gt 0 ]] || list=($(compgen -v _${x,,}))
    for x in ${list[@]}; do echo $x; done
} #ZaZ

