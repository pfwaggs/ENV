function show () { #AzA
    declare x=$(declare -p $1 | awk '{print $2}')
    if [[ $x =~ [aA] ]]; then
	echo array $1:
	for x in $(eval "echo \${!$1[@]}"); do
	    eval "echo $x = \${$1[$x]}"
	done
    else
	echo $1 = ${!1}
    fi
} #ZaZ

