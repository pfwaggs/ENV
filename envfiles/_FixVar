function _FixVar () {
    declare -x o p s
    declare op=$1; shift
    case $op in
	r) echo ${@//:/ } | perl -anl -E 'say join ":", reverse @F'
	    ;;
	l) echo ${@//:/ } | perl -anl -E '@F=map{-l $_ ? readlink($_) : $_}@F;END{say join":",@F}'
	    ;;
	f) s=$1; compgen  -W "${*//:/ }" -X$s* | xargs | perl -anl -E 'say join ":", @F'
	    ;;
	p) for p in ${@//:/ }; do
		[[ $o =~ :$p ]] && continue
		o+=":$p"
	    done
	    echo ${o:1}
	    ;;
    esac
}
