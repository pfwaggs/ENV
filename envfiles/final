[[ $PAGER =~ less ]] && export LESS='-RCMqsu~' || :
export EDITOR=$(type -p emacsclient | head -n 1)
export VISUAL=$EDITOR
export ALTERNATIVE_EDITOR=$(type -p emacs | head -n 1)

complete -o filenames -C '_ArgParser' cd

