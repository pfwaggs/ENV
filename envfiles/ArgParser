
function _ArgParser () {
    declare path file partial dir
    declare -a list
    [[ -n COMP_LINE ]] && x=$2 || x=$1
    partial=${x/\~/$HOME}
    file=${partial##*/}
    for dir in "${partial%/*}" "${DIRSTACK[@]}" ${CDPATH//:/ }; do
	[[ ${#list[@]} = 0 ]] || break
	while read -r path; do
	    [[ -d $path ]] && list+=("$path")
	done < <(compgen -G "$dir/$file*" | sort)
    done
    [[ ${#list[@]} > 0 ]] && echo "${list[@]}" | _FixList -u
}

