
function load () {
    declare x env
    declare -a list=()
    if [[ $# -eq 0 ]]; then
	envpurge
	bloader
    else
	for x in $*; do
	    if [[ $x =~ / ]]; then
		[[ -f $x ]] && list+=($x) || :
	    else
		for env in ${ENVFILES//:/ }; do
		    [[ -f ${env%/*}/$x ]] && list+=(${env%/*}/$x) || :
		done
	    fi
	done
	for x in ${list[@]}; do
	    . $x
	    echo loaded $x
	done
    fi
}

