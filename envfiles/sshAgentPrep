#-*-sh-*-

if [[ -f ~/.agentfile ]]; then
    AGENTFILE=$(cat ~/.agentfile)
else
    AGENTFILE=$(echo /tmp/agentInit-$PPID | tee ~/.agentfile)
    pid=$(grep AGENT $AGENTFILE 2>/dev/null | perl -n -E 'say /=(\d+)/')
    eval "$(ssh-agent | tee $AGENTFILE)"
fi
export -r AGENTFILE
. $AGENTFILE
export SSH_AGENT_PID SSH_AUTH_SOCK
